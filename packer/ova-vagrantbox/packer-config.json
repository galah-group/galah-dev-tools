{
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "source.ova",
      "ssh_username": "root",
      "ssh_password": "packer",
      "ssh_wait_timeout": "30m",
      "format": "ova",
      "shutdown_command": "shutdown -h now"
    }
  ],
  "provisioners": [
    {
      "type": "ansible-local",
      "playbook_file": "playbook.yml",
      "role_paths": [
        "../../ansible/roles/vagrantbox"
      ]
    }
  ],
  "post-processors": [
    {
    "type": "vagrant",
    "compression_level": 9,
    "include": ["metadata.json"]
    }
  ]
}
